{
	"name": "auto-subnetter",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.ts?$": "ts-jest"		
		}
	},
	"scripts": {
		"test": "jest",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write --config .prettierrc.json --ignore-unknown '**/*.!(json|yaml)' '!(.prettierrc.json)' '!(package-lock.json)'"
	},
	"devDependencies": {
		"prettier": "^2.4.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/jest": "^29.5.14",
		"jest": "^29.7.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-jest": "^29.3.2",
		"typescript": "^5.8.3",
		"vite": "^5.4.11"
	}
}